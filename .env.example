# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# AI Image Provider Configuration
# Options: dalle, flux, leonardo
AI_IMAGE_PROVIDER=dalle
DALLE_API_KEY=your-dalle-api-key-here
FLUX_API_KEY=your-flux-api-key-here
LEONARDO_API_KEY=your-leonardo-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Application Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# File Storage Configuration
OUTPUT_PATH=C:/NottuPosts
TEMP_PATH=./temp

# Security
JWT_SECRET=your-jwt-secret-here
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Render Configuration
RENDER_TIMEOUT=30000
RENDER_QUALITY=90
RENDER_FORMAT=png