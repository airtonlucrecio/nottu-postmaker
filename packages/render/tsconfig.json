{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@nottu/core": ["../core/src"],
      "@nottu/core/*": ["../core/src/*"],
      "@nottu/brand-kit": ["../brand-kit/src"],
      "@nottu/brand-kit/*": ["../brand-kit/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../brand-kit" }
  ]
}